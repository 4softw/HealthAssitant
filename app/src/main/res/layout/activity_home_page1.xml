<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f7f6f6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/sun" />

    <ImageView
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="76dp"
        app:srcCompat="@drawable/rounded_rec10" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:text="سه شنبه 23آذر"
        android:textColor="#673AB7"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView23"
        android:layout_marginStart="34dp"
        android:fontFamily=""
        android:text="سلام ،پریا"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="76dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/hi"
        android:layout_below="@+id/imageView19"
        app:srcCompat="@drawable/cg" />


    <TextView
        android:id="@+id/point"
        android:layout_width="76dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/hi"
        android:layout_below="@+id/imageView19"
        android:textColor="#ffff"
        android:fontFamily="@font/iransans"
        android:gravity="center_vertical|center_horizontal"
        android:text="16"
         />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView22"
        android:layout_alignParentTop="true"
        android:layout_marginTop="129dp"
        android:text="امتیاز سلامتی"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="175dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        android:text="شما براساس دنبال کردن برنامه رورانه خود و فعالیت ورزشی امتیاز می گیرید. "
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        android:clickable="true"
        android:text="بیشتر بخوانید"
        android:textColor="#673AB7" />


    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="86dp"
        android:layout_height="88dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="13dp"
        android:clickable="true"
        app:srcCompat="@drawable/profile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />

    <ScrollView
        android:layout_below="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab"
        android:orientation="vertical">

        <TableLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_rec8">

                <TextView
                    android:id="@+id/useColori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="0" />

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="31dp"
                    android:layout_marginTop="11dp"
                    android:padding="5dp"
                    android:text="میزان مصرف کالری"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView0"
                    android:layout_marginEnd="11dp"
                    app:srcCompat="@drawable/restaurant" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/useColori"
                    android:layout_toEndOf="@+id/useColori"
                    android:text="/" />

                <TextView
                    android:id="@+id/MainColori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/useColori"
                    android:layout_toEndOf="@+id/textView16"
                    android:text="5000" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="98dp"
                    android:layout_height="17dp"
                    android:layout_above="@+id/textView16"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="98dp"
                    android:background="@drawable/rounded_rec9"
                    android:text="اضافه کردن"
                    android:textSize="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_rec8"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransans"
                    android:textSize="10dp"
                    android:layout_alignBottom="@+id/useColori2"
                    android:layout_toEndOf="@+id/useColori2"
                    android:text="کالری" />

                <TextView
                    android:id="@+id/useColori2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/imageView6"
                    android:padding="5dp"
                    android:text="میزان فعالیت روزانه"
                    android:textColor="#a6a2a2"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView6"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    app:srcCompat="@drawable/running" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="111dp"
                    app:srcCompat="@drawable/ex" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/walk" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_rec8"
            android:layout_height="90dp">

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/add" />

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="109dp"
                    app:srcCompat="@drawable/minus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView11"
                    android:layout_toStartOf="@+id/imageView11"
                    android:padding="5dp"
                    android:text="میزان آب مصرفی"
                    android:textColor="#aeaeae"
                    android:textSize="10dp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/imageView11"
                    android:layout_width="15dp"
                    android:layout_height="29dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/water" />

                <TextView
                    android:id="@+id/water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/water"
                    android:fontFamily="@font/iransans"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="لیوان" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_rec8"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="29dp"
                    android:layout_marginTop="12dp"
                    android:padding="5dp"
                    android:text="میزان خواب"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="15dp"
                    android:layout_height="21dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView9"
                    android:layout_marginEnd="11dp"
                    app:srcCompat="@drawable/moon" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="98dp"
                    android:layout_height="17dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="99dp"
                    android:background="@drawable/rounded_rec9"
                    android:text="ضبط" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/button2"
                    android:layout_marginStart="13dp"
                    android:text="2 : 46" />
            </RelativeLayout>


        </TableLayout>
    </ScrollView>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/sport"
            android:text="" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/home"
            android:text="" />

        <android.support.design.widget.TabItem
            android:icon="@drawable/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </android.support.design.widget.TabLayout>

</RelativeLayout>