<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back2"
    android:layout_height="match_parent"
    tools:context=".SignupPage">




    <ScrollView
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_rectangle" >

        <TableLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="30dp"
            android:textSize="12dp"
            android:textColor="#000"
            android:fontFamily="@font/iransans"
            android:text="ایمیل" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:textColor="#000"
            android:layout_marginRight="30dp"
            android:focusable="true"
            android:layout_height="50dp"
            android:ems="10"
            android:textDirection="rtl"
            android:background="#f7f7f7"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:textColor="#000"
            android:fontFamily="@font/iransans"
            android:layout_alignEnd="@+id/textView3"
            android:layout_marginTop="20dp"
            android:text="پسورد" />

        <EditText
            android:id="@+id/pass1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:layout_alignEnd="@+id/textView3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#f7f7f7"
            android:textDirection="rtl"
            android:layout_below="@+id/textView4"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass1"
            android:layout_marginRight="30dp"
            android:textColor="#000"
            android:fontFamily="@font/iransans"
            android:layout_alignEnd="@+id/textView3"
            android:layout_marginTop="20dp"
            android:text="تایید پسورد" />

        <EditText
            android:id="@+id/pass2"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_height="50dp"
            android:textColor="#000"
            android:layout_alignEnd="@+id/textView5"
            android:layout_marginLeft="30dp"
            android:background="#f7f7f7"
            android:textDirection="rtl"
            android:layout_below="@+id/textView5"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/ok"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_rec2"
            android:fontFamily="@font/iransans"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="تایید" />

            <ImageView
                android:layout_marginTop="20dp"
                android:textColor="#5c5c5c"
                android:gravity="center"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransans"
               android:src="@drawable/s1"
                android:layout_marginLeft="10dp"
                android:text="ثبت نام با گوگل" />

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/google"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/g" />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/login"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorAccent"
                    android:text="ورود"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/iransans"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="قبلا ثبت نام کرده اید؟"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/iransans"
                    android:gravity="left"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </TableLayout>
    </ScrollView>

    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/vv" />


</RelativeLayout>